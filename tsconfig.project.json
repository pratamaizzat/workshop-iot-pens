{
  "extends": "tsconfig/base.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"include": [
		"./apps/**/*.js",
		"./apps/**/*.ts",
		"./apps/**/*.tsx",
		"./apps/**/*.cjs",
		"./packages/**/*.js",
		"./packages/**/*.ts",
		"./packages/**/*.tsx",
		"./packages/**/*.cjs",
		"*.cjs",
		".*.cjs",
		"*.js",
		"*.ts",
		"**/*.tsx"
	]
}